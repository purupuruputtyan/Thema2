<h1>Books</h1>
<span>Title</span>
<span>Body</span>
<% @books.each do |book| %>
  <span><%= book.title %></span>
  <span><!--　%= book.area %　--></span>
<% end %>

<h3>New Book</h3>
<%= form_with model: @book, url: '/books', method: :post do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>

  <span><!-- %= link_to "Show", "/books/#{book.id}" % --></span>
  <span><%= link_to "Edit", "/books/:id/edit" %></span>
