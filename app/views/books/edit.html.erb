<h1>Editing Book</h1>
<%= form_with model: @book, url: update_book_path(@book.id), method: :patch do |f| %>
<div class="field">
  <label>Title</label>
  <div><%= f.text_field :title %></div>
</div>
<div class="field">
  <label>Body</label>
  <div><%= f.text_area :body %></div>
</div>
<div class="action">
  <%= f.submit 'Update Box' %>
</div>
<% end %>

<%= link_to "Show", "/books/#{@book.id}" %>
|
<%= link_to "Back", "/books" %>
